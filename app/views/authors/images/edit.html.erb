
<%= link_to 'Back', images_path, class: 'btn btn-primary pb-1 mb-4' %>



<div class="row col-md-6 ">
	<div class="card border-dark ">
		<div class="card-body">
			<h4 class='card-title'>Editing Image</h4>

<%= render 'form', image: @image %>

<%= form_for(@image) do |f| %>
	<% if @image.published? %>
		<%= f.hidden_field :published, value: "0" %>
		<%= f.submit  "Unpublish", class: "btn btn-danger btn-block" %>
	<% else %>
		<%= f.hidden_field :published, value: "1" %>
	    <%= f.submit "Publish", class: "btn btn-success btn-block" %>
	<% end %> 
	<% end %>   


<%= link_to 'Image Details', @image %> 
			</div>
		</div>
	</div>
